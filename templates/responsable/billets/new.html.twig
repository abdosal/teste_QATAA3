{% extends 'base.html.twig' %}

{% block title %}Nouveau Billet - {{ evenement.titre }}{% endblock %}

{% block body %}
<style>
    body { background-color: #f8fafc; }

    /* Couleurs Qataa3 */
    :root {
        --brand-color: #6366f1;
        --brand-hover: #4f46e5;
    }

    /* Carte du formulaire */
    .form-card {
        background: white; border-radius: 16px; border: 1px solid #e2e8f0;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025);
        max-width: 650px; margin: 40px auto; overflow: hidden;
    }

    /* En-tête propre (plus de bleu agressif) */
    .form-header {
        padding: 40px 40px 20px; text-align: center;
    }
    .icon-box {
        width: 50px; height: 50px; background: #e0e7ff; color: var(--brand-color);
        border-radius: 12px; display: inline-flex; align-items: center; justify-content: center;
        margin-bottom: 16px; font-size: 1.25rem;
    }
    .form-title { font-size: 1.5rem; font-weight: 800; color: #1e293b; margin-bottom: 4px; }
    .form-subtitle { color: #64748b; font-size: 0.95rem; }

    .form-content { padding: 0 40px 40px; }

    /* Champs stylisés */
    .form-label { font-weight: 600; color: #334155; font-size: 0.9rem; margin-bottom: 8px; }
    .form-control, .form-select {
        border-radius: 10px; border: 1px solid #cbd5e1; padding: 12px 16px; font-size: 0.95rem;
        transition: all 0.2s; background-color: #ffffff;
    }
    .form-control:focus, .form-select:focus {
        border-color: var(--brand-color);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1); outline: none;
    }
    
    /* Input Group pour le prix */
    .input-group-text {
        background: #f1f5f9; border-color: #cbd5e1; color: #64748b; font-weight: 600;
        border-top-right-radius: 10px !important; border-bottom-right-radius: 10px !important;
    }

    /* Boutons */
    .form-actions {
        display: flex; gap: 16px; margin-top: 32px; padding-top: 24px;
        border-top: 1px solid #f1f5f9;
    }
    .btn-submit {
        flex: 2; background: var(--brand-color); color: white; border: none; padding: 14px;
        border-radius: 10px; font-weight: 600; transition: all 0.2s; display: flex;
        align-items: center; justify-content: center; gap: 8px;
    }
    .btn-submit:hover { background: var(--brand-hover); transform: translateY(-1px); color: white; }

    .btn-cancel {
        flex: 1; background: white; color: #64748b; border: 1px solid #cbd5e1; padding: 14px;
        border-radius: 10px; font-weight: 600; text-decoration: none; transition: all 0.2s; text-align: center;
    }
    .btn-cancel:hover { background: #f8fafc; color: #1e293b; border-color: #94a3b8; }
</style>

<div class="container">
    <div class="form-card">
        <div class="form-header">
            <div class="icon-box">
                <i class="fas fa-ticket-alt"></i>
            </div>
            <h1 class="form-title">Nouveau Type de Billet</h1>
            <p class="form-subtitle">Configuration pour l'événement <span class="fw-bold text-dark">{{ evenement.titre }}</span></p>
        </div>

        <div class="form-content">
            {{ form_start(form) }}
                
                <!-- Nom du billet -->
                <div class="mb-4">
                    {{ form_label(form.nomType, 'Nom du Billet', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nomType, {'attr': {'class': 'form-control', 'placeholder': 'Ex: VIP, Early Bird...'}}) }}
                    <div class="form-text text-danger">{{ form_errors(form.nomType) }}</div>
                </div>

                <!-- Ligne Prix et Quantité -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        {{ form_label(form.prix, 'Prix Unitaire', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                            <span class="input-group-text">MAD</span>
                        </div>
                        <div class="form-text text-danger">{{ form_errors(form.prix) }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.quantiteTotale, 'Quantité Totale', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.quantiteTotale, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 1000'}}) }}
                        <div class="form-text text-danger">{{ form_errors(form.quantiteTotale) }}</div>
                    </div>
                </div>

                <!-- Statut -->
                <div class="mb-2">
                    {{ form_label(form.statut, 'Statut Initial', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                    <div class="form-text text-muted small mt-1">
                        <i class="fas fa-info-circle me-1"></i> Définit si les billets sont immédiatement disponibles à la vente.
                    </div>
                </div>

                <!-- Actions -->
                <div class="form-actions">
                    <a href="{{ path('app_responsable_billets', {id: evenement.id}) }}" class="btn-cancel">
                        Annuler
                    </a>
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-check"></i> Créer le Billet
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
