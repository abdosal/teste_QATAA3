{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Qataa3.ma{% endblock %}

{% block body %}
<style>
    .profile-header {
        background: linear-gradient(to right, #ffffff, #f8fafc);
        border-bottom: 1px solid #e2e8f0;
        padding: 24px 32px;
        margin-bottom: 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .profile-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 4px 0;
    }
    .profile-header p {
        margin: 0;
        color: #64748b;
        font-size: 0.875rem;
    }
    .badge-role {
        padding: 6px 12px;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        background: #dbeafe;
        color: #1e40af;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .profile-card,
    .info-card {
        border-radius: 18px;
        border: 1px solid #e2e8f0;
        background: #ffffff;
        box-shadow: 0 10px 28px rgba(15, 23, 42, 0.06);
    }
    .profile-avatar {
        width: 90px;
        height: 90px;
        border-radius: 9999px;
        background: #eff6ff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #2563eb;
        margin: 0 auto 16px auto;
    }
    .profile-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: #0f172a;
    }
    .profile-email {
        font-size: 0.85rem;
        color: #64748b;
    }
    .info-card table th {
        width: 30%;
        font-size: 0.85rem;
        color: #6b7280;
        font-weight: 600;
    }
    .info-card table td {
        font-size: 0.9rem;
        color: #111827;
    }
    .badge-status {
        padding: 4px 10px;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>

<div class="profile-header">
    <div>
        <h1><i class="fas fa-user-circle"></i> Mon Profil</h1>
        <p>Gérez les informations liées à votre compte</p>
    </div>
    <span class="badge-role">
        <i class="fas fa-id-badge"></i> Compte utilisateur
    </span>
</div>

<div class="container pb-5">
    <div class="row g-4">
        <div class="col-md-8">
            <div class="info-card p-3 p-md-4">
                <h5 class="mb-3">Informations personnelles</h5>
                <table class="table table-borderless mb-0">
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.telephone ?? 'Non renseigné' }}</td>
                    </tr>
                    <tr>
                        <th>Date d'inscription</th>
                        <td>{{ user.dateInscription|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Statut du compte</th>
                        <td>
                            {% set isActive = (user.statutCompte == 'actif') %}
                            <span class="badge-status {{ isActive ? 'bg-success text-white' : 'bg-danger text-white' }}">
                                {{ user.statutCompte|upper }}
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="col-md-4">
            <div class="profile-card p-4 text-center mb-3">
                <div class="profile-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="profile-name">{{ user.prenom }} {{ user.nom }}</div>
                <div class="profile-email">{{ user.email }}</div>
            </div>

            <div class="alert alert-info mb-0">
                <i class="fas fa-info-circle"></i>
                Pour modifier vos informations, contactez le support.
            </div>
        </div>
    </div>
</div>
{% endblock %}
