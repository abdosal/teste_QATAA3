{% extends 'base.html.twig' %}

{% block title %}Connexion - Qataa3.ma{% endblock %}

{% block footer %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { 
            margin: 0;
            overflow: hidden;
        }

        .auth-hero {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            background: url('{{ asset('images/concert-bg.jpg') }}') center center / cover no-repeat fixed;
            padding: 1rem;
            overflow: hidden;
        }

        .auth-hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top left, rgba(129, 140, 248, 0.18), transparent 55%),
                        radial-gradient(circle at bottom right, rgba(236, 72, 153, 0.14), transparent 55%),
                        linear-gradient(135deg, rgba(15, 23, 42, 0.94) 0%, rgba(15, 23, 42, 0.90) 50%, rgba(17, 24, 39, 0.92) 100%);
            z-index: 1;
        }

        .auth-container {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 440px;
        }

        @keyframes authFadeUp {
            from { opacity: 0; transform: translateY(18px) scale(0.99); }
            to   { opacity: 1; transform: translateY(0) scale(1); }
        }

        .auth-card {
            background: radial-gradient(circle at top left, rgba(148, 163, 184, 0.22), transparent 55%),
                        rgba(15, 23, 42, 0.88);
            backdrop-filter: blur(26px);
            -webkit-backdrop-filter: blur(26px);
            border-radius: 20px;
            padding: 2rem 2rem;
            border: 1px solid rgba(148, 163, 184, 0.35);
            box-shadow: 0 26px 70px rgba(15, 23, 42, 0.85);
            animation: authFadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .auth-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: #f9fafb;
            margin-bottom: 0.3rem;
            letter-spacing: -0.035em;
        }

        .auth-subtitle {
            font-size: 0.9rem;
            color: rgba(226, 232, 240, 0.7);
            margin-bottom: 1.5rem;
            letter-spacing: -0.01em;
        }

        .form-group { margin-bottom: 1.2rem; }

        .form-label {
            display: block;
            margin-bottom: 0.4rem;
            font-size: 0.84rem;
            font-weight: 500;
            color: rgba(226, 232, 240, 0.92);
            letter-spacing: -0.01em;
        }

        .form-input {
            width: 100%;
            padding: 0.8rem 1rem;
            border-radius: 12px;
            border: 1px solid rgba(148, 163, 184, 0.45);
            font-size: 0.94rem;
            background: rgba(15, 23, 42, 0.85);
            color: #f9fafb;
            transition: all 0.22s cubic-bezier(0.4, 0, 0.2, 1);
            font-family: inherit;
        }

        .form-input::placeholder {
            color: rgba(148, 163, 184, 0.75);
        }

        .form-input:focus {
            outline: none;
            border-color: rgba(129, 140, 248, 0.9);
            background: rgba(15, 23, 42, 0.95);
            box-shadow: 0 0 0 1px rgba(129, 140, 248, 0.7), 0 0 0 6px rgba(129, 140, 248, 0.20);
        }

        .form-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.3rem;
            font-size: 0.84rem;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            color: rgba(226, 232, 240, 0.8);
            cursor: pointer;
        }

        .checkbox-label input {
            width: 15px;
            height: 15px;
            accent-color: #6366f1;
        }

        .link-subtle {
            color: rgba(165, 180, 252, 0.9);
            text-decoration: none;
            transition: color 0.18s;
            font-size: 0.84rem;
        }

        .link-subtle:hover {
            color: #e5e7eb;
        }

        .btn-primary {
            width: 100%;
            padding: 0.8rem 1.2rem;
            border-radius: 999px;
            border: none;
            font-weight: 600;
            font-size: 0.92rem;
            cursor: pointer;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 110%);
            color: #ffffff;
            box-shadow: 0 12px 32px rgba(79, 70, 229, 0.55);
            transition: all 0.23s cubic-bezier(0.4, 0, 0.2, 1);
            margin-bottom: 0.7rem;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 16px 40px rgba(79, 70, 229, 0.7);
        }

        .btn-secondary {
            width: 100%;
            padding: 0.8rem 1.2rem;
            border-radius: 999px;
            border: 1px solid rgba(148, 163, 184, 0.6);
            font-weight: 500;
            font-size: 0.9rem;
            cursor: pointer;
            background: transparent;
            color: rgba(226, 232, 240, 0.9);
            transition: all 0.22s;
        }

        .btn-secondary:hover {
            background: rgba(15, 23, 42, 0.9);
            border-color: rgba(165, 180, 252, 0.9);
            color: #f9fafb;
        }

        .micro-copy {
            margin-top: 0.25rem;
            font-size: 0.75rem;
            color: rgba(148, 163, 184, 0.85);
            text-align: center;
        }

        .alert-error {
            background: rgba(248, 113, 113, 0.10);
            border: 1px solid rgba(248, 113, 113, 0.5);
            border-radius: 12px;
            padding: 0.75rem 0.9rem;
            margin-bottom: 1.2rem;
            color: #fecaca;
            font-size: 0.84rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        @media (max-width: 576px) {
            .auth-card {
                padding: 1.6rem 1.4rem;
            }
            .auth-title {
                font-size: 1.4rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="auth-hero">
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Connexion</h1>
            <p class="auth-subtitle">Accédez à vos billets et événements Qataa3.ma.</p>

            {% if error %}
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">Adresse email</label>
                    <input
                        type="email"
                        id="inputEmail"
                        name="_username"
                        class="form-input"
                        placeholder="nom@exemple.com"
                        value="{{ last_username }}"
                        required
                        autofocus
                    >
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input
                        type="password"
                        id="inputPassword"
                        name="_password"
                        class="form-input"
                        placeholder="••••••••"
                        required
                    >
                </div>

                <div class="form-footer">
                    <label class="checkbox-label">
                        <input type="checkbox" id="remember_me" name="_remember_me">
                        <span>Se souvenir</span>
                    </label>
                    <a href="#" class="link-subtle">Mot de passe oublié ?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn-primary">
                    Se connecter
                </button>

                <button type="button" class="btn-secondary" onclick="window.location='{{ path('app_register') }}'">
                    Créer un compte
                </button>

                <p class="micro-copy">Connexion sécurisée · Vos données sont protégées.</p>
            </form>
        </div>
    </div>
</section>
{% endblock %}
