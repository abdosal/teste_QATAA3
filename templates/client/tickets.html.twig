{% extends 'base.html.twig' %}

{% block title %}Mes Tickets - Qataa3.ma{% endblock %}

{% block body %}
<style>
    body { background-color: #f1f5f9; }

    /* Header Page */
    .page-header {
        background: white;
        padding: 30px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        border: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Carte Ticket Style "Pass" */
    .ticket-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column; /* Mobile first */
        height: 100%;
    }
    
    @media (min-width: 768px) {
        .ticket-card { flex-direction: row; }
    }

    .ticket-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px -5px rgba(37, 99, 235, 0.15);
        border-color: #bfdbfe;
    }

    /* Partie Gauche : Infos */
    .ticket-info {
        padding: 25px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border-right: 2px dashed #e2e8f0; /* Ligne de découpe */
        position: relative;
    }
    
    /* Demi-cercles déco pour l'effet ticket */
    .ticket-info::after, .ticket-info::before {
        content: ''; position: absolute; right: -10px; width: 20px; height: 20px;
        background: #f1f5f9; border-radius: 50%; border: 1px solid #e2e8f0;
    }
    .ticket-info::before { top: -10px; }
    .ticket-info::after { bottom: -10px; }

    .event-title {
        font-size: 1.25rem; font-weight: 800; color: #1e293b;
        margin-bottom: 15px; line-height: 1.3;
    }

    .ticket-meta {
        display: flex; flex-direction: column; gap: 8px; margin-bottom: 15px;
    }
    .meta-item {
        color: #64748b; font-size: 0.9rem; font-weight: 500;
        display: flex; align-items: center; gap: 10px;
    }
    .meta-icon {
        width: 24px; text-align: center; color: #2563eb;
    }

    /* Badges */
    .badge-ticket {
        padding: 6px 12px; border-radius: 8px; font-weight: 700; font-size: 0.75rem; text-transform: uppercase;
    }
    .badge-type { background: #eff6ff; color: #2563eb; border: 1px solid #dbeafe; }
    .badge-valid { background: #ecfdf5; color: #059669; border: 1px solid #d1fae5; }
    .badge-used { background: #f1f5f9; color: #64748b; border: 1px solid #e2e8f0; }

    /* Partie Droite : QR Code */
    .ticket-qr-zone {
        background: #f8fafc;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-width: 160px;
    }

    .qr-img {
        width: 120px; height: 120px;
        border: 4px solid white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        margin-bottom: 10px;
    }

    .ticket-code {
        font-family: 'Courier New', monospace;
        font-weight: 700; font-size: 0.8rem; color: #475569;
        background: #e2e8f0; padding: 4px 8px; border-radius: 4px;
    }
    
    /* Bouton d'action */
    .btn-download-mini {
        width: 100%; margin-top: 10px;
        font-size: 0.8rem; font-weight: 600;
        color: #2563eb; background: white; border: 1px solid #e2e8f0;
        padding: 6px; border-radius: 8px; transition: all 0.2s;
    }
    .btn-download-mini:hover {
        background: #2563eb; color: white; border-color: #2563eb;
    }

    /* Empty State */
    .empty-state {
        text-align: center; padding: 60px 20px; background: white; border-radius: 20px; border: 1px dashed #cbd5e1;
    }
</style>

<div class="container py-5">
    
    <!-- En-tête -->
    <div class="page-header">
        <div>
            <h1 class="fw-bold text-dark mb-1" style="font-size: 1.75rem;">
                <i class="fas fa-ticket-alt text-primary me-2"></i>Mes Tickets
            </h1>
            <p class="text-muted mb-0">Retrouvez vos billets électroniques et codes d'accès</p>
        </div>
        <a href="{{ path('app_client_dashboard') }}" class="btn btn-outline-secondary px-4 py-2 rounded-3 fw-medium">
            <i class="fas fa-arrow-left me-2"></i> Retour
        </a>
    </div>

    {% if tickets is empty %}
        <div class="empty-state">
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle" style="width: 100px; height: 100px;">
                    <i class="fas fa-ticket-alt fa-3x text-muted opacity-50"></i>
                </div>
            </div>
            <h3 class="fw-bold text-dark">Aucun ticket actif</h3>
            <p class="text-muted mb-4">Réservez dès maintenant pour vos événements préférés.</p>
            <a href="{{ path('app_events') }}" class="btn btn-primary px-4 py-2 rounded-3 fw-bold">
                <i class="fas fa-search me-2"></i> Voir les événements
            </a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for ticket in tickets %}
                <div class="col-lg-6"> <!-- 2 Tickets par ligne sur grand écran -->
                    <div class="ticket-card">
                        <!-- Info Event -->
                        <div class="ticket-info">
                            <div class="d-flex gap-2 mb-3">
                                <span class="badge-ticket badge-type">
                                    {{ ticket.ligneCommande.typeBillet.nomType }}
                                </span>
                                {% if ticket.statutTicket == 'valide' %}
                                    <span class="badge-ticket badge-valid"><i class="fas fa-check-circle me-1"></i> VALIDE</span>
                                {% else %}
                                    <span class="badge-ticket badge-used">{{ ticket.statutTicket|upper }}</span>
                                {% endif %}
                            </div>

                            <h3 class="event-title">{{ ticket.ligneCommande.typeBillet.evenement.titre }}</h3>
                            
                            <div class="ticket-meta">
                                <div class="meta-item">
                                    <i class="fas fa-calendar-day meta-icon"></i>
                                    <span>{{ ticket.ligneCommande.typeBillet.evenement.dateEvenement|date('d/m/Y') }} à {{ ticket.ligneCommande.typeBillet.evenement.dateEvenement|date('H:i') }}</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-map-marker-alt meta-icon"></i>
                                    <span>{{ ticket.ligneCommande.typeBillet.evenement.lieu }}</span>
                                </div>
                            </div>
                        </div>

                        <!-- QR Code Zone -->
                        <div class="ticket-qr-zone">
                            <img src="data:image/png;base64,{{ ticket.codeQr }}" alt="QR" class="qr-img">
                            <div class="ticket-code">{{ ticket.codeTicket }}</div>
                            <button class="btn btn-download-mini mt-2" onclick="window.print()">
                                <i class="fas fa-print me-1"></i> Imprimer
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
