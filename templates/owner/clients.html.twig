{% extends 'base.html.twig' %}

{% block title %}Clients - Owner{% endblock %}

{% block body %}
<style>
    .admin-header {
        background: linear-gradient(to right, #ffffff, #f8fafc);
        padding: 24px 32px;
        border-bottom: 1px solid #e2e8f0;
        margin-bottom: 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .page-title h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 4px 0;
        letter-spacing: -0.025em;
    }
    .page-title p {
        margin: 0;
        color: #64748b;
        font-size: 0.875rem;
    }

    .badge-modern {
        padding: 6px 12px;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.75rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .badge-warning-soft { background: #fef9c3; color: #854d0e; }
    .badge-success-soft { background: #dcfce7; color: #166534; }
    .badge-danger-soft  { background: #fee2e2; color: #b91c1c; }
    .badge-info-soft    { background: #dbeafe; color: #1e40af; }
    .badge-neutral-soft { background: #f1f5f9; color: #475569; }

    .custom-table-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.03), 0 4px 6px -2px rgba(0, 0, 0, 0.01);
        border: 1px solid #f1f5f9;
        overflow: hidden;
    }
    .table {
        margin-bottom: 0;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }
    .table thead th {
        background: #f8fafc;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: #475569;
        padding: 16px 24px;
        border-bottom: 1px solid #e2e8f0;
    }
    .table tbody td {
        padding: 16px 24px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        color: #334155;
        font-size: 0.95rem;
        transition: background-color 0.2s;
    }
    .table tbody tr:last-child td { border-bottom: none; }
    .table tbody tr:hover td { background-color: #f8fafc; }

    .text-primary-dark { color: #0f172a; }
    .text-secondary-muted { color: #64748b; font-size: 0.85rem; }

    .table-footer-info {
        font-size: 0.85rem;
        color: #6b7280;
        background:#f9fafb;
        border-top:1px solid #e5e7eb;
        padding: 12px 24px;
        display:flex;
        justify-content:space-between;
        align-items:center;
    }
</style>

<div class="admin-header">
    <div class="page-title">
        <h1>Clients</h1>
        <p>Consultation des comptes clients et de leur statut</p>
    </div>
    <span class="badge-modern badge-warning-soft">
        <i class="fas fa-lock"></i> Mode lecture seule
    </span>
</div>

<div class="container-fluid px-4 pb-5">
    {% if clients is empty %}
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                <i class="fas fa-users fa-2x text-muted opacity-50"></i>
            </div>
            <h3 class="text-dark fw-bold mb-2">Aucun client</h3>
            <p class="text-muted mb-0">Aucun client n'est encore enregistré.</p>
        </div>
    {% else %}
        <div class="custom-table-container">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 25%;">Nom complet</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Rôle</th>
                            <th>Statut</th>
                            <th>Date inscription</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>#{{ client.id }}</td>
                                <td>
                                    <div class="fw-bold text-primary-dark">
                                        {{ client.prenom }} {{ client.nom }}
                                    </div>
                                    <div class="text-secondary-muted">
                                        ID: {{ client.id }}
                                    </div>
                                </td>
                                <td>{{ client.email }}</td>
                                <td>{{ client.telephone ?? 'N/A' }}</td>
                                <td>
                                    {% if 'ROLE_OWNER' in client.roles %}
                                        <span class="badge-modern badge-warning-soft">Owner</span>
                                    {% elseif 'ROLE_RESPONSABLE' in client.roles %}
                                        <span class="badge-modern badge-info-soft">Responsable</span>
                                    {% else %}
                                        <span class="badge-modern badge-neutral-soft">Client</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if client.statutCompte == 'actif' %}
                                        <span class="badge-modern badge-success-soft">
                                            <span class="bg-success rounded-circle" style="width: 6px; height: 6px;"></span>
                                            ACTIF
                                        </span>
                                    {% else %}
                                        <span class="badge-modern badge-danger-soft">
                                            <span class="bg-danger rounded-circle" style="width: 6px; height: 6px;"></span>
                                            {{ client.statutCompte|upper }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td>{{ client.dateInscription|date('d/m/Y') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="table-footer-info">
                <span>{{ clients|length }} client(s) affiché(s)</span>
                <span>Données visibles en consultation uniquement.</span>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
