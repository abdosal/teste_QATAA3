{% extends 'base.html.twig' %}

{% block title %}Dashboard Owner - Qataa3.ma{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            background: #f8fafc;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        /* HEADER DASHBOARD */
        .dashboard-header {
            background: linear-gradient(135deg, #1a1f36 0%, #2d3561 100%);
            color: #fff;
            padding: 40px 0 60px;
            margin-bottom: -40px;
        }
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        .header-content h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }
        .header-content p {
            color: rgba(255,255,255,0.75);
            font-size: 1rem;
        }
        .badge-owner {
            background: #10b981;
            color: #fff;
            padding: 8px 18px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 12px rgba(16,185,129,0.3);
        }

        /* CARTES STATS MODERNES */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
            position: relative;
            z-index: 5;
        }
        .stat-card {
            background: #fff;
            border-radius: 16px;
            padding: 28px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 8px rgba(15,23,42,0.06);
            transition: all .3s ease;
            position: relative;
            overflow: hidden;
        }
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform .3s ease;
        }
        .stat-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 32px rgba(15,23,42,0.12);
            border-color: #cbd5e1;
        }
        .stat-card:hover::before {
            transform: scaleX(1);
        }
        
        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }
        .stat-label {
            font-size: 0.9rem;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            transition: transform .3s ease;
        }
        .stat-card:hover .stat-icon {
            transform: scale(1.1) rotate(5deg);
        }
        .icon-green { background: #d1fae5; color: #10b981; }
        .icon-yellow { background: #fef3c7; color: #f59e0b; }
        .icon-blue { background: #dbeafe; color: #3b82f6; }
        .icon-purple { background: #ede9fe; color: #8b5cf6; }
        
        .stat-value {
            font-size: 2.2rem;
            font-weight: 700;
            color: #1a1f36;
            margin-bottom: 8px;
            line-height: 1;
        }
        .stat-description {
            font-size: 0.85rem;
            color: #94a3b8;
            line-height: 1.5;
        }

        /* QUICK ACTIONS */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        .action-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 24px;
            transition: all .3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: block;
        }
        .action-card:hover {
            border-color: #3b82f6;
            box-shadow: 0 8px 24px rgba(59,130,246,0.15);
            transform: translateY(-3px);
        }
        .action-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 16px;
        }
        .action-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1a1f36;
            margin-bottom: 8px;
        }
        .action-desc {
            font-size: 0.9rem;
            color: #64748b;
            line-height: 1.5;
        }

        /* SECTIONS AVEC CARTES BLANCHES */
        .section-card {
            background: #fff;
            border-radius: 16px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 8px rgba(15,23,42,0.06);
            margin-bottom: 32px;
            overflow: hidden;
        }
        .section-header {
            padding: 24px 28px;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 12px;
            background: linear-gradient(to right, #f8fafc, #fff);
        }
        .section-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: #3b82f6;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
        }
        .section-header h2 {
            font-size: 1.4rem;
            font-weight: 700;
            color: #1a1f36;
            letter-spacing: -0.01em;
        }

        /* TABLEAUX PROFESSIONNELS */
        .table-wrapper {
            overflow-x: auto;
            padding: 0;
        }
        .table-modern {
            width: 100%;
            border-collapse: collapse;
        }
        .table-modern thead {
            background: #f8fafc;
        }
        .table-modern th {
            padding: 16px 24px;
            text-align: left;
            font-size: 0.85rem;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border-bottom: 2px solid #e2e8f0;
        }
        .table-modern tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: all .2s ease;
        }
        .table-modern tbody tr:hover {
            background: #f8fafc;
        }
        .table-modern td {
            padding: 18px 24px;
            color: #1e293b;
            font-size: 0.95rem;
        }
        .table-modern tbody tr:last-child {
            border-bottom: none;
        }
        
        .event-name {
            font-weight: 600;
            color: #1a1f36;
        }
        .table-amount {
            font-weight: 700;
            color: #10b981;
        }

        /* EMPTY STATE */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #94a3b8;
        }
        .empty-state i {
            font-size: 3.5rem;
            margin-bottom: 16px;
            opacity: 0.4;
        }
        .empty-state p {
            font-size: 1rem;
            margin: 0;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 30px 0 50px;
            }
            .header-content h1 {
                font-size: 1.6rem;
            }
            .stats-grid {
                grid-template-columns: 1fr;
            }
            .table-modern {
                font-size: 0.85rem;
            }
            .table-modern th, .table-modern td {
                padding: 12px 16px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div>
                    <h1>Dashboard Owner</h1>
                    <p>Vue globale de l'activité de la plateforme</p>
                </div>
                <span class="badge-owner">
                    <i class="fas fa-shield-alt"></i>
                    Espace propriétaire
                </span>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- STATS KPI -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Billets vendus</div>
                        <div class="stat-value">{{ total_billets_vendus|default(0) }}</div>
                        <div class="stat-description">Total cumulé sur l'ensemble des événements</div>
                    </div>
                    <div class="stat-icon icon-green">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Revenus</div>
                        <div class="stat-value">{{ revenus_total|number_format(0, ',', ' ') }} MAD</div>
                        <div class="stat-description">Revenus totaux générés par la plateforme</div>
                    </div>
                    <div class="stat-icon icon-yellow">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Clients</div>
                        <div class="stat-value">{{ total_clients|default(0) }}</div>
                        <div class="stat-description">Comptes clients enregistrés sur la plateforme</div>
                    </div>
                    <div class="stat-icon icon-blue">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Événements actifs</div>
                        <div class="stat-value">{{ evenements_actifs|default(0) }}</div>
                        <div class="stat-description">Événements actuellement ouverts à la vente</div>
                    </div>
                    <div class="stat-icon icon-purple">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- QUICK ACTIONS -->
        <div class="quick-actions">
            <a href="{{ path('app_owner_events') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="action-title">Gérer les événements</div>
                <div class="action-desc">Consulter et gérer tous les événements de la plateforme</div>
            </a>

            <a href="{{ path('app_owner_clients') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <div class="action-title">Liste des clients</div>
                <div class="action-desc">Voir tous les clients inscrits et leur activité</div>
            </a>

            <a href="{{ path('app_owner_reports') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="action-title">Rapports détaillés</div>
                <div class="action-desc">Statistiques avancées et graphiques d'analyse</div>
            </a>
        </div>

        <!-- TOP ÉVÉNEMENTS -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h2>Top événements (ventes)</h2>
            </div>
            <div class="table-wrapper">
                {% if ventes_by_event is defined and ventes_by_event|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Événement</th>
                                <th>Billets vendus</th>
                                <th>Revenus (MAD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for vente in ventes_by_event %}
                                <tr>
                                    <td class="event-name">{{ vente.event_titre }}</td>
                                    <td>{{ vente.total_ventes }}</td>
                                    <td class="table-amount">{{ vente.revenus|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-chart-bar"></i>
                        <p>Aucune donnée de vente disponible pour le moment.</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- ACTIVITÉ RÉCENTE -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h2>Activité récente</h2>
            </div>
            <div class="table-wrapper">
                {% if last_orders is defined and last_orders|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in last_orders %}
                                <tr>
                                    <td>{{ order.dateCommande|date('d/m/Y H:i') }}</td>
                                    <td>{{ order.client.nom ~ ' ' ~ order.client.prenom }}</td>
                                    <td class="table-amount">{{ order.montantTotal|number_format(0, ',', ' ') }} MAD</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div style="padding: 20px 28px; border-top: 1px solid #e2e8f0; background: #f8fafc;">
                        <p style="margin: 0; color: #64748b; font-size: 0.9rem;">
                            Liste limitée aux {{ last_orders|length }} dernières commandes.
                        </p>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-history"></i>
                        <p>Aucune activité récente enregistrée.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
