{% extends 'base.html.twig' %}

{% block title %}Dashboard Owner - Qataa3.ma{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            background: #f8fafc;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        /* HEADER MAUVE FONCÉ */
        .dashboard-header {
            background: linear-gradient(135deg, #6b21a8 0%, #7e22ce 50%, #9333ea 100%);
            color: #fff;
            padding: 50px 0;
            margin-bottom: 40px;
            box-shadow: 0 4px 20px rgba(107,33,168,0.3);
        }
        
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .header-content h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }
        
        .header-content p {
            color: rgba(255,255,255,0.9);
            font-size: 1rem;
        }
        
        .badge-owner {
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            color: #fff;
            padding: 10px 20px;
            border-radius: 10px;
            font-size: 0.9rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: 1px solid rgba(255,255,255,0.3);
            transition: all .3s ease;
            cursor: default;
        }
        
        .badge-owner:hover {
            background: rgba(255,255,255,0.3);
            transform: scale(1.05);
        }

        /* CARTES STATS RÉACTIVES PROFESSIONNELLES */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: #fff;
            border-radius: 16px;
            padding: 32px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 8px rgba(15,23,42,0.04);
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(15,23,42,0.03), transparent);
            transition: left .6s;
        }
        
        .stat-card:hover::before {
            left: 100%;
        }
        
        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 16px 40px rgba(15,23,42,0.12);
            border-color: #cbd5e1;
        }
        
        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .stat-card:hover .stat-icon {
            transform: scale(1.15) rotate(-8deg);
        }
        
        .icon-green { background: #d1fae5; color: #10b981; }
        .icon-yellow { background: #fef3c7; color: #f59e0b; }
        .icon-blue { background: #dbeafe; color: #3b82f6; }
        .icon-purple { background: #f3e8ff; color: #2f1d40ff; }
        
        .stat-label {
            font-size: 0.88rem;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 8px;
            transition: all .3s;
        }
        
        .stat-card:hover .stat-label {
            color: #475569;
            transform: translateX(3px);
        }
        
        .stat-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: #0f172a;
            margin-bottom: 6px;
            line-height: 1;
            transition: all .3s ease;
        }
        
        .stat-card:hover .stat-value {
            color: #1e293b;
            transform: scale(1.05);
        }
        
        .stat-description {
            font-size: 0.85rem;
            color: #94a3b8;
            line-height: 1.4;
            transition: color .3s;
        }
        
        .stat-card:hover .stat-description {
            color: #64748b;
        }

        /* QUICK ACTIONS PROFESSIONNELLES */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .action-card {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 28px;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: block;
            position: relative;
            overflow: hidden;
        }
        
        .action-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            transition: width .4s ease;
        }
        
        .action-card:hover::after {
            width: 100%;
        }
        
        .action-card:hover {
            border-color: #cbd5e1;
            box-shadow: 0 12px 32px rgba(15,23,42,0.12);
            transform: translateY(-8px);
        }
        
        .action-icon {
            width: 54px;
            height: 54px;
            border-radius: 12px;
            background: #64748b;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            margin-bottom: 18px;
            transition: all .4s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .action-card:hover .action-icon {
            background: #475569;
            transform: scale(1.15) rotate(5deg);
            box-shadow: 0 8px 20px rgba(71,85,105,0.4);
        }
        
        .action-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 8px;
            transition: all .3s;
        }
        
        .action-card:hover .action-title {
            color: #1e293b;
            transform: translateX(5px);
        }
        
        .action-desc {
            font-size: 0.9rem;
            color: #64748b;
            line-height: 1.5;
            transition: color .3s;
        }
        
        .action-card:hover .action-desc {
            color: #475569;
        }

        /* SECTIONS PROFESSIONNELLES */
        .section-card {
            background: #fff;
            border-radius: 16px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 8px rgba(15,23,42,0.04);
            margin-bottom: 32px;
            overflow: hidden;
            transition: all .3s ease;
        }
        
        .section-card:hover {
            box-shadow: 0 12px 32px rgba(15,23,42,0.1);
            transform: translateY(-4px);
        }
        
        .section-header {
            padding: 28px 32px;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 14px;
            transition: background .3s;
        }
        
        .section-card:hover .section-header {
            background: #f8fafc;
        }
        
        .section-icon {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            background: #64748b;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            transition: all .3s ease;
        }
        
        .section-card:hover .section-icon {
            background: #475569;
            transform: scale(1.1) rotate(-5deg);
        }
        
        .section-header h2 {
            font-size: 1.4rem;
            font-weight: 700;
            color: #0f172a;
            letter-spacing: -0.01em;
            transition: color .3s;
        }
        
        .section-card:hover .section-header h2 {
            color: #1e293b;
        }

        /* TABLEAUX PROFESSIONNELS */
        .table-wrapper {
            overflow-x: auto;
        }
        
        .table-modern {
            width: 100%;
            border-collapse: collapse;
        }
        
        .table-modern thead {
            background: #f8fafc;
        }
        
        .table-modern th {
            padding: 18px 32px;
            text-align: left;
            font-size: 0.85rem;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border-bottom: 2px solid #e2e8f0;
            transition: all .3s;
        }
        
        .section-card:hover .table-modern th {
            color: #475569;
        }
        
        .table-modern tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: all .3s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .table-modern tbody tr:hover {
            background: #f8fafc;
            transform: translateX(8px);
            box-shadow: -4px 0 0 #3b82f6;
        }
        
        .table-modern td {
            padding: 20px 32px;
            color: #334155;
            font-size: 0.95rem;
            transition: all .3s;
        }
        
        .table-modern tbody tr:hover td {
            color: #1e293b;
        }
        
        .table-modern tbody tr:last-child {
            border-bottom: none;
        }
        
        .event-name {
            font-weight: 600;
            color: #0f172a;
            transition: all .3s;
        }
        
        .table-modern tbody tr:hover .event-name {
            color: #1e293b;
            transform: translateX(3px);
        }
        
        .table-amount {
            font-weight: 700;
            color: #10b981;
            transition: all .3s;
        }
        
        .table-modern tbody tr:hover .table-amount {
            color: #059669;
            transform: scale(1.05);
        }

        /* EMPTY STATE */
        .empty-state {
            text-align: center;
            padding: 70px 20px;
            color: #94a3b8;
            transition: all .3s;
        }
        
        .empty-state:hover {
            color: #64748b;
        }
        
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.3;
            transition: all .5s ease;
        }
        
        .empty-state:hover i {
            opacity: 0.5;
            transform: scale(1.15) rotate(5deg);
        }
        
        .empty-state p {
            font-size: 1rem;
            margin: 0;
        }

        /* FOOTER INFO */
        .table-footer {
            padding: 20px 32px;
            border-top: 1px solid #e2e8f0;
            background: #f8fafc;
        }
        
        .table-footer p {
            margin: 0;
            color: #64748b;
            font-size: 0.88rem;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 35px 0;
            }
            
            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .header-content h1 {
                font-size: 1.8rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .stat-card {
                padding: 24px;
            }
            
            .stat-value {
                font-size: 2rem;
            }
            
            .table-modern th,
            .table-modern td {
                padding: 14px 20px;
                font-size: 0.88rem;
            }
            
            .section-header {
                padding: 20px 24px;
            }
            
            .table-footer {
                padding: 16px 24px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div>
                    <h1>Dashboard Owner</h1>
                    <p>Vue d'ensemble de l'activité de la plateforme</p>
                </div>
                <span class="badge-owner">
                    <i class="fas fa-shield-alt"></i>
                    Propriétaire
                </span>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <!-- STATISTIQUES KPI -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Billets vendus</div>
                        <div class="stat-value">{{ total_billets_vendus|default(0) }}</div>
                        <div class="stat-description">Total sur tous les événements</div>
                    </div>
                    <div class="stat-icon icon-green">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Revenus</div>
                        <div class="stat-value">{{ revenus_total|number_format(0, ',', ' ') }}</div>
                        <div class="stat-description">Montant total en MAD</div>
                    </div>
                    <div class="stat-icon icon-yellow">
                        <i class="fas fa-coins"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Clients</div>
                        <div class="stat-value">{{ total_clients|default(0) }}</div>
                        <div class="stat-description">Comptes enregistrés</div>
                    </div>
                    <div class="stat-icon icon-blue">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-label">Événements actifs</div>
                        <div class="stat-value">{{ evenements_actifs|default(0) }}</div>
                        <div class="stat-description">En cours de vente</div>
                    </div>
                    <div class="stat-icon icon-purple">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- ACTIONS RAPIDES -->
        <div class="quick-actions">
            <a href="{{ path('app_owner_events') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="action-title">Gérer les événements</div>
                <div class="action-desc">Consulter et gérer tous les événements</div>
            </a>

            <a href="{{ path('app_owner_clients') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <div class="action-title">Liste des clients</div>
                <div class="action-desc">Voir tous les clients inscrits</div>
            </a>

            <a href="{{ path('app_owner_reports') }}" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="action-title">Rapports détaillés</div>
                <div class="action-desc">Statistiques et analyses</div>
            </a>
        </div>

        <!-- TOP ÉVÉNEMENTS -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h2>Top événements par ventes</h2>
            </div>
            <div class="table-wrapper">
                {% if ventes_by_event is defined and ventes_by_event|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Événement</th>
                                <th>Billets vendus</th>
                                <th>Revenus (MAD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for vente in ventes_by_event %}
                                <tr>
                                    <td class="event-name">{{ vente.event_titre }}</td>
                                    <td>{{ vente.total_ventes }}</td>
                                    <td class="table-amount">{{ vente.revenus|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-chart-bar"></i>
                        <p>Aucune donnée disponible pour le moment</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- ACTIVITÉ RÉCENTE -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h2>Activité récente</h2>
            </div>
            <div class="table-wrapper">
                {% if last_orders is defined and last_orders|length > 0 %}
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in last_orders %}
                                <tr>
                                    <td>{{ order.dateCommande|date('d/m/Y H:i') }}</td>
                                    <td>{{ order.client.nom ~ ' ' ~ order.client.prenom }}</td>
                                    <td class="table-amount">{{ order.montantTotal|number_format(0, ',', ' ') }} MAD</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="table-footer">
                        <p>{{ last_orders|length }} dernières commandes affichées</p>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-history"></i>
                        <p>Aucune activité récente enregistrée</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
