{% extends 'base.html.twig' %}

{% block title %}Accueil - Qataa3.ma{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Hero Section avec Image de Fond */
    .hero-section {
        position: relative;
        height: 600px;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), 
                    url('{{ asset('images/concert-hero.jpg') }}') center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.3), rgba(139, 92, 246, 0.3));
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 900px;
        padding: 0 20px;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 0.8s ease;
    }

    .hero-content p {
        font-size: 1.3rem;
        margin-bottom: 2.5rem;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 0.8s ease 0.2s both;
    }

    /* Barre de Recherche Moderne */
    .search-container {
        position: relative;
        max-width: 700px;
        margin: 0 auto;
        animation: fadeInUp 0.8s ease 0.4s both;
    }

    .search-box {
        display: flex;
        background: white;
        border-radius: 50px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .search-box input {
        flex: 1;
        border: none;
        padding: 20px 30px;
        font-size: 1.1rem;
        outline: none;
        color: #333;
    }

    .search-box input::placeholder {
        color: #94a3b8;
    }

    .search-box button {
        background: #1e1b4b;
        border: none;
        padding: 20px 35px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .search-box button:hover {
        background: #312e81;
    }

    .search-box button i {
        color: white;
        font-size: 1.3rem;
    }

    /* Section Événements */
    .events-section {
        padding: 80px 0;
        background: #f8fafc;
    }

    .section-title {
        text-align: center;
        margin-bottom: 50px;
    }

    .section-title h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .section-title h2 i {
        color: #6366f1;
    }

    /* Cartes d'Événements Modernes */
    .event-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        margin-bottom: 30px;
        height: 100%;
    }

    .event-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .event-card-image {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

    .event-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .event-card:hover .event-card-image img {
        transform: scale(1.1);
    }

    .event-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #6366f1;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .event-card-body {
        padding: 25px;
    }

    .event-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 10px;
    }

    .event-artist {
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .event-rating {
        color: #fbbf24;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .btn-book-now {
        background: #1e1b4b;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-book-now:hover {
        background: #6366f1;
        transform: scale(1.05);
        color: white;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-section {
            height: 500px;
        }

        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .search-box input {
            padding: 15px 20px;
            font-size: 0.95rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section avec Image -->
<section class="hero-section">
    <div class="hero-content">
        <h1>Découvrez les meilleurs événements au Maroc</h1>
        <p>Concerts, festivals, conférences... Réservez vos billets en quelques clics</p>
        
        <div class="search-container">
            <form action="{{ path('app_events') }}" method="get">
                <div class="search-box">
                    <input type="text" name="search" placeholder="Rechercher des événements, concerts, conférences...">
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Section Événements à Venir -->
<section class="events-section">
    <div class="container">
        <div class="section-title">
            <h2><i class="fas fa-star"></i> Événements à venir</h2>
        </div>

        <div class="row">
            {% if evenements is empty %}
                <div class="col-12 text-center">
                    <p class="text-muted fs-5">Aucun événement disponible pour le moment.</p>
                    {% if is_granted('ROLE_ORGANISATEUR') %}
                        <a href="{{ path('app_evenement_new') }}" class="btn btn-primary btn-lg mt-3">
                            <i class="fas fa-plus-circle"></i> Créer un événement
                        </a>
                    {% endif %}
                </div>
            {% else %}
                {% for evenement in evenements %}
                <div class="col-md-4">
                    <div class="event-card">
                        <div class="event-card-image">
                            {% if evenement.image %}
                                <img src="{{ asset('images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}">
                            {% else %}
                                <img src="https://images.unsplash.com/photo-1501281668745-f7f57925c3b4?w=400&h=250&fit=crop" alt="{{ evenement.titre }}">
                            {% endif %}
                            <span class="event-badge">{{ evenement.categorie }}</span>
                        </div>
                        <div class="event-card-body">
                            <h3 class="event-title">{{ evenement.titre }}</h3>
                            <p class="event-artist">
                                <i class="fas fa-calendar-alt"></i> {{ evenement.dateEvenement|date('d/m/Y à H:i') }}
                            </p>
                            <p class="event-artist">
                                <i class="fas fa-map-marker-alt"></i> {{ evenement.lieu }}
                            </p>
                            <div class="event-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <a href="{{ path('app_event_detail', {id: evenement.id}) }}" class="btn btn-book-now">
                                Réserver maintenant
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
