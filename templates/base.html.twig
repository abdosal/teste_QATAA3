            margin-top: 40px;
            padding-top: 25px;
            text-align: center;
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
        }

        .app-download-buttons {
            display: flex;
            gap: 15px;
            margin-top: 1.5rem;
            flex-wrap: wrap;
        }

        .app-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .app-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            transform: translateY(-2px);
        }

        .app-btn i { font-size: 1.5rem; }
        .app-btn-text { display: flex; flex-direction: column; align-items: flex-start; }
        .app-btn-label { font-size: 0.7rem; opacity: 0.8; }
        .app-btn-store { font-size: 1rem; font-weight: 600; }

        @media (max-width: 768px) {
            .footer-custom { text-align: center; }
            .social-links { justify-content: center; }
            .app-download-buttons { justify-content: center; }
        }

        /* CHAT BUTTON */
        .chat-button {
            position: fixed;
            right: 24px;
            bottom: 24px;
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 30px rgba(15,23,42,0.35);
            cursor: pointer;
            z-index: 1100;
            border: none;
        }
        .chat-button i { font-size: 1.4rem; }

        .chat-popup {
            position: fixed;
            right: 24px;
            bottom: 90px;
            width: 340px;
            max-height: 480px;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(15,23,42,0.35);
            display: none;
            flex-direction: column;
            overflow: hidden;
            z-index: 1100;
        }
        .chat-popup-header {
            padding: 0.9rem 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .chat-popup-body {
            padding: 0.9rem;
            height: 260px;
            overflow-y: auto;
            background: #f8fafc;
            font-size: 0.9rem;
        }
        .chat-popup-footer {
            padding: 0.75rem;
            background: #ffffff;
            border-top: 1px solid #e2e8f0;
            display: flex;
            gap: 0.4rem;
        }
        .chat-input {
            flex: 1;
            border-radius: 999px;
            border: 1px solid #e2e8f0;
            padding: 0.45rem 0.75rem;
            font-size: 0.9rem;
        }
        .chat-send-btn {
            border-radius: 999px;
            border: none;
            background: #667eea;
            color: #fff;
            padding: 0.45rem 0.9rem;
            font-size: 0.85rem;
        }
        .chat-message {
            margin-bottom: 0.45rem;
        }
        .chat-message.user { text-align: right; color: #0f172a; }
        .chat-message.bot { text-align: left; color: #475569; }
    </style>
    {% endblock %}
</head>
